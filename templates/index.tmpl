      </div>
      <div class="row">
        <div class="col-sm-11">
          <div id="svgDiv" class="well">
            <canvas id="svgCanvas"></canvas>
            <script>
              const svgCanvas = document.getElementById('svgCanvas');
              const ctx = svgCanvas.getContext('2d');

              function loadSVG(filePath) {
                fetch(filePath)
                  .then(response => response.text())
                  .then(data => {
                    const img = new Image();
                    img.onload = () => drawImage(img);
                    img.src = `data:image/svg+xml;base64,${btoa(data)}`;
                  })
                  .catch(error => console.error('Error loading SVG:', error));
              }

              function drawImage(img) {
                ctx.clearRect(0, 0, svgCanvas.width, svgCanvas.height);
                
                const containerWidth = document.getElementById('svgDiv').offsetWidth;
                const containerHeight = document.getElementById('svgDiv').offsetHeight;
                
                const scaleFactor = Math.min(containerWidth / img.width, containerHeight / img.height);
                const newWidth = img.width * scaleFactor;
                const newHeight = img.height * scaleFactor;
                
                const x = (containerWidth - newWidth) / 2;
                const y = (containerHeight - newHeight) / 2;
                
                ctx.drawImage(img, x, y, newWidth, newHeight);
              }

              window.addEventListener('resize', () => {
                const div = document.getElementById('svgDiv');
                svgCanvas.width = div.clientWidth;
                svgCanvas.height = div.clientHeight;
                drawImage(document.querySelector('img'));
              });

              // Change this to the local file path of the SVG
              const svgPath = 'static/user-boy.svg';
              loadSVG(svgPath);
            </script>
          </div>
        </div>
      </div>
    </div>
  </div>
